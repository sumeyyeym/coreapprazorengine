
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bilge Adam - @DateTime.Now.ToShortDateString()</title>
</head>
<body>
    <!--Çoklu dotnet çalışma mantığı. Buranın içinde scope alanı mantığı yok. Aşağıdaki diziye bu kısımda her yerden ulaşılabilir.-->
    <!-- "at" işareti dotnet yazdığımız anlamına gelir. at işareti yoksa html kodu olarak algılar.-->
    <!--icon eklemek için favicon.com kullan-->

    @{
        string[] sehirler = {
            "Ankara",
            "İstanbul",
            "Kayseri",
            "Bursa",
            "Çorum"
        };
    }

    @{ 
        string isim = "Sümeyye";
        string soyisim = "Kaya";
        string mail = "skaya@gmail.com";
    }

    <h1>Bilge Adam</h1>

    <ul>
        @foreach (string sehir in sehirler)
        {
            <li>@sehir</li>

        }
    </ul>

    <p>
        Ad : @isim
    </p>
    <p>
        Soyad : @soyisim
    </p>
    <p>
        Mail : @mail
    </p>

    <ul>
        @for (int i = 0; i < 100; i++)
        {
            if (i%2 == 0)
            {
                <li>@i</li>
            }
        }
    </ul>
</body>
</html>
